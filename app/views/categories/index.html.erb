<div class="row">
  <% if can? :create, @category %>
    <%= link_to "Add New Category" , new_category_path , class: "btn btn-info" %>
  <% else %>
    <%= link_to "Can't Create Category" , '' , class: "btn btn-info" , disabled: "disabled" %>
  <% end %>
</div>
<h1>Listing Categories</h1>
<h4><%= link_to "List all Items" , items_path %></h4>
 
<table class="table">
  <tr>
    <th>Category id</th>
    <th>Name</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category_path(category) %></td>
      <td>
        <% if can? :update, category %>
          <%= link_to 'Edit', edit_category_path(category) %>
        <% else %>
          Can't edit
        <% end %>
      </td>
      <td>
        <% if can? :destroy, category %>
          <%= link_to 'Delete', category_path(category) , method: :delete %>
        <% else %>
          Can't edit
        <% end %>
      </td>  
    </tr>
  <% end %>
</table>